set -ue

# test a an image by awaiting its HEALTHCHECK

docker_image=${1?docker_image is required, notably without a tag. Ex openzipkin/zipkin}

# This just makes sure containers run and the HEALTHCHECK works (for now..)
compose_file=${2:-build-bin/docker-compose-$(echo ${docker_image}| cut -f2 -d/).yml}

health_rc=0
if test -f "${compose_file}"; then
  # This may fail even if exit code is success when a health condition fails
  docker-compose -f "${compose_file}" up -d --quiet-pull || health_rc=1
else
  docker run --name sut -d ${docker_image}:test
fi

# This will fail if the container isn't healthy or doesn't exist (ex compose failed before creation)
if [ "${health_rc}" = "1" ] || ! build-bin/docker/docker_block_on_health sut; then
  docker logs sut || true
  health_rc=1
fi

if test -f "${compose_file}"; then
  docker-compose -f "${compose_file}" down
else
  docker kill sut && docker rm sut
fi

exit ${health_rc}

